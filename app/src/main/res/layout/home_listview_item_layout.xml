<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_item_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingTop="10dp"
    android:paddingLeft="12dp"
    android:background="@drawable/background_ripple_gray"
    android:paddingBottom="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_item_iv"
        android:src="@mipmap/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:scaleType="fitCenter"
        app:riv_corner_radius="5dp"/>

    <TextView
        android:id="@+id/home_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_item_iv"
        android:layout_alignTop="@id/home_item_iv"
        android:text="王小明"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/home_item_tv_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_item_tv_name"
        android:layout_alignBottom="@id/home_item_tv_name"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="5k-9k"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_title_red"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/home_item_tv_excepted_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_tv_name"
        android:layout_alignLeft="@id/home_item_tv_name"
        android:text="期望工作：厨师"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/home_item_tv_detail"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_tv_excepted_job"
        android:layout_alignLeft="@id/home_item_tv_name"
        android:text="男 18岁 高中 3年工作经验"
        android:textSize="11sp"
        android:textColor="@color/text_gray"
        />

    <TextView
        android:id="@+id/home_item_tv_other"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_tv_detail"
        android:layout_alignLeft="@id/home_item_tv_name"
        android:text="餐厅人数 | 50-150人 "
        android:textSize="11sp"
        android:textColor="@color/text_gray"
        />

    <TextView
        android:id="@+id/home_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_item_tv_other"
        android:layout_alignTop="@id/home_item_tv_other"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:text="8月11日 4:00"
        android:textSize="11sp"
        android:textColor="@color/text_gray"
        />



</RelativeLayout>