<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
   >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/person_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:clipToPadding="true"
            android:minHeight="81dp"
            android:background="@drawable/beijingtu_01">

            <ImageView
                android:id="@+id/person_btn_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:src="@drawable/setting_icon" />

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="90dp"
            android:elevation="0dp"></FrameLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!---->
        <RelativeLayout
            android:id="@+id/person_layout_post_position"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_ripple_gray"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.goldenchef.company.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/fabuzhiwei_icon"
                android:drawablePadding="8dp"
                android:text="发布职位"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                app:drawableHeight="18dp"
                app:drawableWidth="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_carrot_right" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/person_layout_manage_position"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_ripple_gray"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_carrot_right" />

            <com.goldenchef.company.widgets.CustomTextView
                android:id="@+id/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/guanlizhiwei_icon"
                android:drawablePadding="8dp"
                android:text="管理职位"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                app:drawableHeight="18dp"
                app:drawableWidth="20dp" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/person_layout_check_chef"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_ripple_gray"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.goldenchef.company.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/chakantoudijianli_icon"
                android:drawablePadding="8dp"
                android:text="查看投递厨师"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                app:drawableHeight="22dp"
                app:drawableWidth="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_carrot_right" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/person_layout_check_invite_chef"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_ripple_gray"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_carrot_right" />

            <com.goldenchef.company.widgets.CustomTextView
                android:id="@+id/customTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/chakanyaoqingchoushi_icon"
                android:drawablePadding="8dp"
                android:text="查看邀请厨师"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                app:drawableHeight="22dp"
                app:drawableWidth="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_iv_profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/touxiang_icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <com.goldenchef.company.widgets.CustomTextView
            android:id="@+id/person_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/person_iv_profile_image"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/person_iv_profile_image"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/edit_icon"
            android:text="王小明"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:drawableHeight="15dp"
            app:drawableWidth="15dp" />

        <TextView
            android:id="@+id/person_tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/person_tv_name"
            android:layout_below="@id/person_tv_name"
            android:layout_marginTop="13dp"
            android:text="男/25岁/一年工作经验"
            android:textColor="@color/text_gray"
            android:textSize="13sp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>