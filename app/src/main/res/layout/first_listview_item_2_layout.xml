<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/manage_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="专业铁板烧厨师(2名)"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/manage_item_tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/manage_item_tv_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="4800-6000元/月"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/manage_item_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全职"
            android:layout_marginLeft="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="11sp"
            android:background="@drawable/background_circle_gray"
            android:layout_toRightOf="@id/manage_item_tv_salary"
            android:layout_alignTop="@id/manage_item_tv_salary"
            android:textColor="@android:color/darker_gray"/>

        <com.goldenchef.company.widgets.CustomTextView
            android:id="@+id/manage_item_btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="审核失败"
            android:textSize="13sp"
            android:textColor="@color/text_gray"
            app:drawableWidth="20dp"
            app:drawableHeight="20dp"
            android:drawableRight="@drawable/arrow_carrot_right"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="right">

        <com.goldenchef.company.widgets.CustomTextView
            android:id="@+id/manage_item_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@null"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/shanchu_icon"
            android:textColor="@android:color/darker_gray"
            android:text="删除"
            android:textSize="11sp"
            app:drawableWidth="18dp"
            app:drawableHeight="18dp"
            />

    </LinearLayout>


</LinearLayout>